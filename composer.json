{
    "name": "hardanders/zfinder-api-client",
    "description": "Provides an abstraction to interact with the zfinder API",
    "type": "library",
    "license": [
        "GPL-2.0-or-later"
    ],
    "authors": [
        {
            "name": "Sven Petersen",
            "email": "sven@hardanders.de",
            "homepage": "https://www.hardanders.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.0",
        "symfony/http-client": "^7.4"
    },
    "require-dev": {
        "php-cs-fixer/shim": "^3.75",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "symfony/debug": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Hardanders\\ZfinderApiClient\\": "Classes/"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/vendor/bin",
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "ci:test": [
            "@ci:php:stan",
            "@ci:php:cs-fixer"
        ],
        "ci:fix": [
            "@ci:php:cs-fixer:fix"
        ],
        "ci:php:cs-fixer:fix": [
            "php-cs-fixer fix -v --using-cache no"
        ],
        "ci:php:cs-fixer": "php-cs-fixer fix -v --dry-run --using-cache no --diff",
        "ci:php:stan": "phpstan --no-progress --memory-limit=1G"
    }
}
